<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Portfolio</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/css/site.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #ffffff;
            color: #212529;
            margin: 0;
            padding: 0;
        }

        /* Navbar */
        .navbar {
            background: #ffffff !important;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .navbar-brand {
            font-weight: 700;
            color: #004aad !important;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #212529 !important;
            font-weight: 500;
            margin-right: 15px;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #004aad !important;
            }

        footer {
            background: #f8f9fa;
            color: #6c757d;
            text-align: center;
            padding: 20px 0;
            margin-top: 40px;
            font-size: 0.95rem;
        }

        main {
            padding-top: 90px; /* To account for fixed navbar */
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#home">HOME</a></li>
                    <li class="nav-item"><a class="nav-link" href="#about">ABOUT</a></li>
                    <li class="nav-item"><a class="nav-link" href="#skills">SKILLS</a></li>
                    <li class="nav-item"><a class="nav-link" href="#projects">CERTIFICATES</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">CONTACTS</a></li>
                </ul>

            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="container-fluid px-0">
        @RenderBody()
    </main>

    <!-- Footer -->
    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div id="contact" class="container">
            <div class="row">
                <!-- Contact Info -->
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5>Contact</h5>
                    <p class="mb-1"><i class="bi bi-telephone-fill me-2"></i>+27 65 701 6578</p>
                    <p class="mb-0"><i class="bi bi-envelope-fill me-2"></i>yawaasenathi2003@gmail.com</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#home" class="text-light text-decoration-none">Home</a></li>
                        <li><a href="#skills" class="text-light text-decoration-none">Skills</a></li>
                        <li><a href="#projects" class="text-light text-decoration-none">Certificate</a></li>
                        <li><a href="#home" class="text-light text-decoration-none">Curriculum Vitae</a></li>
                    </ul>
                </div>

                <!-- Social Links -->
                <div class="col-md-4 text-md-end">
                    <h5>Follow Me</h5>
                    <a href="https://wa.me/27657016578" target="_blank" class="text-light fs-4 me-3"><i class="bi bi-whatsapp"></i></a>
                    <a href="mailto:yawaasenathi2003@gmail.com" class="text-light fs-4 me-3"><i class="bi bi-envelope-fill"></i></a>
                    <a href="https://github.com/dashboard" class="me-3 fs-4"><i class="bi bi-github"></i></a>
                    <a href="https://linkedin.com/in/asenathi-yawa-181382293" target="_blank" class="text-light fs-4 me-3"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>

            <hr class="border-light my-3">

            <!-- Copyright -->
            <div class="text-center">
                &copy; <span id="year"></span> — Asenathi Yawa, Software Development Student
            </div>
        </div>
    </footer>

    <!-- Script to update year automatically -->
    <script>
        document.getElementById('year').textContent = new Date().getFullYear();
    </script>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
